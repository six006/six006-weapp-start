{
    "name": "UI配置文件",
    "clean": [
        "dist"
    ],
    "copy": [
        {
            "srcRoot": "src",
            "distRoot": "dist",
            "src": [
                "src/assets/**/*"
            ],
            "dist": "dist",
            "base": "src"
        }
    ],
    "sass": [
        {
            "srcRoot": "src",
            "distRoot": "dist",
            "src": [
                "./src/styles/**/*.scss",
                "./src/pages/**/*.scss",
                "./src/app.scss"
            ],
            "dist": "./dist",
            "base": "src"
        }
    ],
    "html": [
        {
            "srcRoot": "src",
            "distRoot": "dist",
            "src": [
                "src/**/*.html"
            ],
            "dist": "dist",
            "base": "src"
        },
        {
            "srcRoot": "src",
            "distRoot": "dist",
            "src": [
                "src/**/*.wxml"
            ],
            "dist": "dist",
            "base": "src"
        }
    ],
    "json": [
        {
            "srcRoot": "src",
            "distRoot": "dist",
            "src": [
                "src/**/**.json"
            ],
            "dist": "dist",
            "base": "src",
            "suffix": ".json"
        }
    ],
    "ts": [
        {
            "srcRoot": "src",
            "distRoot": "dist",
            "sourceMap": true,
            "src": "src/**/*.ts",
            "dist": "dist"
        }
    ],
    "libs": {
        "tslib": "./dist/libs/tslib",
        "lodash": "./dist/libs/lodash",
        "@six006/core": "./dist/libs/@six006/core"
    },
    "server": {
        "root": "./server",
        "port": 2018
    }
}